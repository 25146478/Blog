@page
@model IndexModel
<div id="articles">
    <script id="articles_tmpl" type="text/template">
        {{each result.items}}
        <div class="thumbnail">
            <div class="caption">
                <h1 class="vc-page-title"><a href="/p/{{$value.id}}.html">{{$value.title}}</a></h1>
                <p class="vc-author-info">
                    <span><i class="fa fa-book"></i> <a href="#">ASP.NET</a></span>
                    <time><i class="fa fa-calendar"></i> {{$value.postTime}}</time>
                    <span><i class="fa fa-user"></i> 阿星Plus</span>
                    <span><i class="fa fa-at"></i> {{$value.source}}</span>
                    <span><i class="fa fa-link"></i><a href="#"> 原文地址</a></span>
                </p>
                <p class="hidden-xs">{{$value.summary}}...</p>
                <p class="clearfix">
                    <a class="hidden-xs pull-right vc-more-link" href="" role="button">继续阅读 &raquo;</a>
                    <span class="vc-tags">
                        <a href="">我是标签1</a>
                        <a href="">我是标签2</a>
                        <a href="">我是标签3</a>
                    </span>
                </p>
            </div>
        </div>
        {{/each}}
    </script>
</div>
<nav class="text-right"><ul id="page"></ul></nav>
@section Scripts{
    <script src="~/js/bootstrap-paginator.min.js"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
}